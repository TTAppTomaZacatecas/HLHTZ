<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#D3D3D3"
    android:id="@+id/main">


 <!-- LinearLayout para imageView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight=".2">

        <!--Imagen de vista principal "Bufa"-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="430dp"
            android:layout_height="449dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bufaaaa1" />

    </LinearLayout>

    <!-- LinearLayout para gifImageView y gifImageView2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight=".2">
        <!--Imagen de adelita y gerrillero-->
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_width="160dp"
            android:layout_height="195dp"
            android:src="@drawable/adelita_saludando_unscreen" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView2"
            android:layout_width="160dp"
            android:layout_height="195dp"
            android:src="@drawable/hombre_saludo_unscreen" />
    </LinearLayout>

    <!-- LinearLayout para Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight=".1">

        <!--BotÃ³n de  inicio-->
        <Button
            android:id="@+id/btnInicio"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:text="INICIAR"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>

    <!-- LinearLayout para gifImageView3 y gifImageView4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight=".2">

        <!--Imagen de militar y mujer de la epoca-->
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView3"
            android:layout_width="160dp"
            android:layout_height="195dp"
            android:src="@drawable/militar_saludando_unscreen" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView4"
            android:layout_width="160dp"
            android:layout_height="195dp"
            android:src="@drawable/mujer_saludo_unscreen" />
    </LinearLayout>

</LinearLayout>
