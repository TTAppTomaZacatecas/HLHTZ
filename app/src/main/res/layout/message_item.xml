<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <!-- Gif de inicio de pantalla-->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="127dp"
        android:layout_height="160dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/hombre_saludo_unscreen"
        />
    <!-- icono de mensaje-->
    <ImageView
        android:id="@+id/icono"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginEnd="0dp"
        android:src="@drawable/layer_drawable_militar"
        android:visibility="visible"
        tools:visibility="visible" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Mensaje del Bot-->
        <TextView
            android:id="@+id/tv_bot_message"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/receive_round_box"
            android:backgroundTint="#666666"
            android:padding="10dp"
            android:text="Aqui se va a mirar lo que el boot va a responder"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible" />

        <!-- Mensaje de usuario-->
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="230dp"
            android:layout_height="67dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/send_round_box"
            android:backgroundTint="#653a13"
            android:padding="14dp"
            android:text="Aqui se va a mirar lo que el usuario ingrese"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>
    <!-- Gif  de respuesta-->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifRespuesta"
        android:layout_width="127dp"
        android:layout_height="160dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/hombre_saludo_unscreen"
        android:visibility="gone"/>






</LinearLayout>