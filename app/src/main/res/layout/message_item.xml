<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="145dp"
        android:layout_height="160dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/pixil_gif_drawing_unscreen" />

    <TextView
        android:id="@+id/tv_bot_message"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="left"
        android:drawableTop="@drawable/layer_drawable"
        android:gravity="left"
        android:background="@drawable/receive_round_box"
        android:backgroundTint="#FF7075"
        android:padding="14dp"
        android:text="Aqui se va a mirar lo que el boot va a responder"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="182dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_margin="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/send_round_box"
        android:backgroundTint="#26A69A"
        android:padding="14dp"
        android:text="Aqui se va a mirar lo que el usuario ingrese"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


</LinearLayout>